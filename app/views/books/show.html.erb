<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Recommendation for <%= @book.title %> </h3>
  </div>
  <div class="panel-body">

    <h4><% @book.values.each do |value| %>
         <ul> <li><i class="fa <%= value.icon %>"></i>
          <%= value.name %></li></ul>
          <% end %></h4>
    <p><b>Project:</b> <%= @book.author %></p>
    <p><b>Details:</b> <%= @book.description %></p>
    <p><b>Goodreads: </b> <%= @book.goodreads_url %></p>
  </div>
</div>
